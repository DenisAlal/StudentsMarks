<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsactivity.homefragments.AddDataFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        >



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/goInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/outline_info_24"
            app:backgroundTint="?attr/colorPrimaryVariant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?attr/colorSecondaryVariant" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавление\n данных"
        android:textAlignment="center"
        android:textColor="?attr/colorSecondaryVariant"
        android:textSize="26sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/linearTraffic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
    <LinearLayout
        android:id="@+id/linearTraffic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical"
        android:background="@drawable/bottom_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="30dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loadStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button"
            android:text="Загрузка списка студентов"
            android:textColor="?attr/colorAccent"
            android:textColorHighlight="#4980f0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Создание предмета"
            android:background="@drawable/button"
            android:textColor="?attr/colorAccent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gradeTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button"
            android:text="Создание задания"
            android:textColor="?attr/colorAccent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewStud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Просмотр списка студентов"
            android:background="@drawable/button"
            android:textColor="?attr/colorAccent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Просмотр списка предметов"
            android:background="@drawable/button"
            android:textColor="?attr/colorAccent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/viewTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Просмотр списка заданий"
            android:background="@drawable/button"
            android:textColor="?attr/colorAccent"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>