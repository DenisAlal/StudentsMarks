<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_viewGrade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="true"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="@android:color/white"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="50dp"
        app:frameSize="0.75"
        app:frameThickness="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maskColor="#77000000">


    </com.budiyev.android.codescanner.CodeScannerView>

    <Button
        android:id="@+id/changeCamGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_cameraswitch_24_white"
        android:contentDescription="@string/changeCameraBut"
        android:contextClickable="false"
        android:minWidth="48dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/scanner_viewGrade"
        app:layout_constraintEnd_toEndOf="@+id/scanner_viewGrade"
        app:layout_constraintStart_toStartOf="@+id/scanner_viewGrade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/scanner_viewGrade"
        app:layout_constraintStart_toStartOf="@+id/scanner_viewGrade"
        android:layout_marginHorizontal="10dp"
       >


        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать данного студента"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>